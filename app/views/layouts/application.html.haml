!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Krispy Shoppe
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'

    = csrf_meta_tags
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
      .container
        .navbar-header
          %a.navbar-brand{href: products_path, } Online Shoppe
        .ul.nav.navbar-nav.navbar-right
          -if logged_in?
            .li
              =link_to 'Order History', carts_path, {class: 'btn btn-default'}
              %a{href: "/carts/show", class: 'btn btn-default' } Cart
              =link_to 'Logout', logout_path, {class: 'btn btn-default'}
          -else
            .li
              =link_to 'Login', new_session_path, {class: 'btn btn-default'}
              =link_to 'Sign Up', new_user_path, {class: 'btn btn-default'}

    %br
    %br
    %br
    - flash.each do |message_type, message|
      %div{:class => "alert alert-#{message_type}"}= message
    = yield
