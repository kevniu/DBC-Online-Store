%h4 Shopping Cart
%table.table
  %thead.thead-inverse
    %tr
      %th Product
      %th Price
      %th Quantity
      %th
      %th
      %th

  %tbody
    - products.each do |product|
      %tr
        %td= product.name
        %td= number_to_currency(product.price)
        %td= quantities[product.name]
        %td{id: product.id.to_s}
          %button.btn.btn-default.btn-sm
            -{id: product.id.to_s}
            Remove


%div
  = 'Total Price: '
  = total_price

%br

